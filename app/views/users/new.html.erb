<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>Join Devfolio</h1>
    <%= form_for(@user) do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.submit "Create account", class: "btn btn-lg btn-primary form-submit" %>
    <% end %>
  </div>
</div>
