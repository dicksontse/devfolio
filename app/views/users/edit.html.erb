<% provide(:title, 'Edit profile') %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1>Edit profile</h1>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :github, "Github" %>
          <%= f.text_field :github %>
        </div>
        <div class="col-md-4">
          <%= f.label :location %>
          <%= f.text_field :location %>

          <%= f.label :website %>
          <%= f.text_field :website %>
          
          <%= f.label :gravatar, "Gravatar" %>
          <%= f.check_box :gravatar %>
        </div>
        <div class="col-md-4">
          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="edit-section">
            <ul id="edit-tabs" class="nav nav-tabs" role="tablist">
              <li class="active" data-id="welcome"><a href="#">Welcome</a></li>
              <li data-id="about"><a href="#">About</a></li>
              <li data-id="education"><a href="#">Education</a></li>
              <li data-id="experience"><a href="#">Experience</a></li>
              <li data-id="projects"><a href="#">Projects</a></li>
              <li data-id="skills"><a href="#">Skills</a></li>
            </ul>
            <%= cktext_area_tag 'edit-ta' %>
            <%= f.hidden_field :welcome_section %>
            <%= f.hidden_field :about_section %>
            <%= f.hidden_field :education_section %>
            <%= f.hidden_field :experience_section %>
            <%= f.hidden_field :projects_section %>
            <%= f.hidden_field :skills_section %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.submit "Save changes", id: "edit-submit", 
                        class: "btn btn-lg btn-primary form-submit" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
