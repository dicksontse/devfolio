<header class="navbar navbar-static-top navbar-inverse df-nav">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Dev List", root_path, class: "navbar-brand" %>
    </div>
    <ul class="nav nav-pills navbar-right">
      <% if signed_in? %>
        <li class="<%= 'active' if current_page?(root_url + current_user.username) %>">
          <%= link_to current_user.username, root_url + current_user.username %>
        </li>
        <li class="<%= 'active' if current_page?(edit_user_path(current_user.username)) %>">
          <%= link_to "Edit profile", edit_user_path(current_user.username) %>
        </li>
        <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
      <% else %>
        <li class="<%= 'active' if current_page?(signup_path) %>">
          <%= link_to "Sign up", signup_path %>
        </li>
        <li class="<%= 'active' if current_page?(signin_path) %>">
          <%= link_to "Sign in", signin_path %>
        </li>
      <% end %>
    </ul>
  </div>
</header>
