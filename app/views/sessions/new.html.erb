<% provide(:title, "Sign in") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>
    
        <%= f.label :email %>
        <%= f.text_field :email, :autofocus => true %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in", class: "btn btn-lg btn-primary form-submit" %>
    <% end %>

    <div id="join-msg">New to Devfolio? <%= link_to "Join now!", signup_path %></div>
  </div>
</div>
